<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed == true %>
  <p><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task.id) %></p>
  <% else %>
  <p><i class="far fa-square"></i> <%= link_to task.title, task_path(task.id) %></p>
  <% end %>
<% end %>

<%= link_to "Add a new task", new_path %>
