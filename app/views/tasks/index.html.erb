<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p>

  <% if task.completed == true %>
  <i class="far fa-check-square"></i>
  <% else %>
  <i class="far fa-square"></i>
  <% end %>

  <%= link_to task.title, task_path(task.id) %> <small><%= link_to raw('<i class="fas fa-trash-alt"></i>'), tasks_path(task.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></small></p>

<% end %>

<%= link_to "Add a new task", new_task_path %>

